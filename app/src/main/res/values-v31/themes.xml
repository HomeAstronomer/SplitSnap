<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SnapSplit.StartingScreen" parent="Theme.SplashScreen.IconBackground">

        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_padded</item>
        <item name="postSplashScreenTheme">@style/Theme.SnapSplit.AppTheme</item>
        <item name="android:splashScreenTheme">@style/Theme.SnapSplit.AppTheme</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="Theme.SnapSplit.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>